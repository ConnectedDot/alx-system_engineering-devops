#!/usr/bin/env bash
# Configures an Ubuntu server as follows:
#   - localhost resolves to 127.0.0.2
#   - facebook.com resolves to 8.8.8.8


# Save original hosts file
sudo cp /etc/hosts ~/hosts.original

# Modify hosts file
echo "127.0.0.2       localhost" | sudo tee -a /etc/hosts
echo "8.8.8.8         facebook.com" | sudo tee -a /etc/hosts

# Verify modification
if grep -q "^127\\.0\\.0\\.2[[:space:]]*localhost" /etc/hosts && grep -q "^8\\.8\\.8\\.8[[:space:]]*facebook\\.com" /etc/hosts; then
    echo "Hosts file modified successfully."
else
    echo "Failed to modify hosts file."
fi



////////////////////

#!/usr/bin/env bash
# Configures an Ubuntu server as follows:
#   - localhost resolves to 127.0.0.2
#   - facebook.com resolves to 8.8.8.8

cp /etc/hosts ~/hosts.new
echo "127.0.0.2		localhost" > ~/hosts.new
echo "8.8.8.8		facebook.com" >> ~/hosts.new
cp -f ~/hosts.new /etc/hosts


